# GreenGamePay API Configuration
# Получите ключи на https://пополнистим.рф после регистрации
# Документация: https://greengamepay.readme.io/reference

# API Base URL (не менять без необходимости)
VITE_API_BASE_URL=https://api.greengamepay.com

# API Credentials (получить у @ZELENOYPAREN в Telegram)
VITE_GREENGAMEPAY_API_KEY=your_api_key_here
VITE_GREENGAMEPAY_API_SECRET=your_api_secret_here

# Telegram Bot Token (для уведомлений)
VITE_TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Site Configuration
VITE_SITE_NAME=GamePay Hub
VITE_SITE_URL=https://your-domain.com

# Payment Configuration
VITE_MIN_TOPUP_AMOUNT=100
VITE_MAX_TOPUP_AMOUNT=100000

# Feature Flags
VITE_ENABLE_TELEGRAM_STARS=true
VITE_ENABLE_GIFT_GAMES=true
VITE_ENABLE_GIFT_CARDS=true

# Development
VITE_DEBUG_MODE=false
