# ===========================================
# GamePay Hub Environment Configuration
# ===========================================

# Application
APP_NAME=GamePay Hub
APP_ENV=local
APP_DEBUG=true

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=gamepay
DB_USERNAME=gamepay
DB_PASSWORD=secret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# GreenGamePay API
GREENGAMEPAY_API_URL=https://api.greengamepay.com
GREENGAMEPAY_API_TOKEN=your_greengamepay_token_here

# PayPalych Payment API
PAYPALYCH_BASE_URL=https://pal24.pro
PAYPALYCH_API_TOKEN=your_paypalych_token_here
PAYPALYCH_SHOP_ID=your_shop_id_here
PAYPALYCH_SUCCESS_URL=http://localhost:3000/payment/success
PAYPALYCH_FAIL_URL=http://localhost:3000/payment/fail

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=http://localhost:8000/api/v1/webhooks/telegram

# Email (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@gamepay.hub
MAIL_FROM_NAME="${APP_NAME}"

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT Settings
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_TTL=15
JWT_REFRESH_TTL=10080

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=gamepay-hub
